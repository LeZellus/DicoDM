{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8">
            <div>
                <div class="flex items-center justify-center">
                    <p class="text-4xl font-bold uppercase"><span class="text-pink-400">D</span>ico <span class="text-green-400">D</span>es <span class="text-blue-400">M</span>ots</p>
                    <img class="ml-4 pb-2 h-12 w-auto" src="{{ asset('uploads/open-book.png') }}" alt="Your Company">
                </div>
                <h2 class="mt-6 text-center text-3xl font-bold tracking-tight">Inscrivez-vous</h2>
                <p class="mt-2 text-center text-base">
                    Déjà inscrit ?
                    <a href="{{ path('app_login') }}" class="font-medium text-green-400 hover:text-green-200">Connexion</a>
                </p>
            </div>

            {{ form_start(registrationForm, {'attr':  {'class': 'mt-8 space-y-6'}}) }}
                <input type="hidden" name="remember" value="true">
                <div class="-space-y-px">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'hidden'}}) }}
                    {{ form_widget(registrationForm.email) }}

                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'hidden'}}) }}
                    {{ form_widget(registrationForm.plainPassword) }}
                </div>
                <div>
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'ai lu et j\'accepte les conditions générales', {'label_attr': {'class': 'ml-2 text-sm text-pink-400'}}) }}
                </div>

                    {{ form_widget(registrationForm.submit) }}
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
